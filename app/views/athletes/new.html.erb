<h1>New athlete</h1>

<% form_for(@athlete, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
 <p>
    <%= f.label :photo, 'Choose a photo to upload' %><br />
    <%= f.file_field :photo%>
  </p>
  <p>
    <%= f.label :primary_sports %><br />
    <%= f.text_field :primary_sports %>
  </p>
  <p>
    <%= f.label :hometown %><br />
    <%= f.text_field :hometown %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', athletes_path %>