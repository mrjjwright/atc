<h1>Editing athlete</h1>

<% form_for(@athlete, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

 <p>
    <%= label_tag 'secret_key' %><br />
    <%= password_field_tag 'secret_key' %>
  </p>
 
 <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
 <p>
    <%= f.label :photo, 'Choose a photo to upload' %><br />
    <%= f.file_field :photo%>
  </p>
  <p>
    <%= f.label :primary_sports %><br />
    <%= f.text_field :primary_sports %>
  </p>
a  <p>
    <%= f.label :hometown %><br />
    <%= f.text_field :hometown %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

