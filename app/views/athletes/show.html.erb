<% if @fb_photos != nil then %>

<script type='text/javascript'>//<![CDATA[
		$(function() {
			$('#athlete_fb_photos').crossSlide({
			  speed: 45,
			  fade: 1
			}, [
			<% @fb_photos.each do |photo| %>
			  { src: '<%=photo["src_big"]%>', dir: '<%=rand(2) == 1 ? "up" : "down" %>'   }<%= photo == @fb_photos.last ? "" : ","%>
			<% end %>
			]
			);
		});
	//]]></script>
<% end %>
<h2><%=h @athlete.name.upcase %></h2>
	
<ul class="athlete_facts">
  <li>Hometown:<span class="fact"><%=h @athlete.hometown %></span></li>
  <li>Primary Sports: <span class="fact"><%=h @athlete.primary_sports %></span></li>
</ul>
<div>
  <%=@athlete.content %>
</div>

