<h1>Create News Item</h1>

<% form_for(@media_profile, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= label_tag 'secret_key' %><br />
    <%= password_field_tag 'secret_key' %>
  </p>
  <p>
    <%= f.label :title, 'Image Title' %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :landing, 'Choose a photo to upload' %><br />
    <%= f.file_field :landing %>
  </p>
  <p>
    <%= f.label :content, 'Content' %><br />
    <%= f.text_area :content, :size => "100x30" %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>


<%= link_to 'News', "/news" %>